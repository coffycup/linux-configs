label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = lock
menu-0-0-exec = betterlockscreen -l dimblur
menu-0-1 = reboot
menu-0-1-exec = menu-open-1
menu-0-2 = "power off "
menu-0-2-exec = menu-open-2

menu-1-0 = "OK "
menu-1-0-exec = systemctl reboot

menu-2-0 = "OK "
